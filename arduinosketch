   // пин подключения контакта VRX

   #define PIN_VRX A0

   // пин подключения контакта VRY

   #define PIN_VRY A1

   // пин подключения кнопки

   #define PIN_BUTTON 3

#include <Servo.h> // подключаем библиотеку для работы с сервоприводом

Servo servo1; 
int kover;
int valX;
   void setup () {

      // запуск последовательного порта
      
      Serial.begin (9600);      
         servo1.attach(4);      

   }    
//d
   void loop () {
int kover = Serial.read();
servo1.write(kover);
delay(1000);

   }
