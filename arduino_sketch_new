#include <Servo.h> // подключаем библиотеку для работы с сервоприводом

Servo servo1; 
int num = 0;
char InChar;
void setup() {
  Serial.begin(9600);
  servo1.attach(4);
   
}
void loop()
{ 

    InChar = (char)Serial.read();
 while (Serial.available())
 {
InChar = (char)Serial.read();


  if(InChar == '2')
  {
   

    servo1.write(45); // 45 градусов

    
  }  
  
if(InChar == '1')
{

    servo1.write(90);

    
}
 }
  
}
    
